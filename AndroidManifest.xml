name: Ensure AD_ID Permission in AndroidManifest

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  add-ad-id-permission:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Ensure AD_ID permission exists
        run: |
          MANIFEST_PATH="android/app/src/main/AndroidManifest.xml"
          PERMISSION_LINE='<uses-permission android:name="com.google.android.gms.permission.AD_ID"/>'

          if ! grep -q "$PERMISSION_LINE" "$MANIFEST_PATH"; then
            echo "Permission missing. Injecting into AndroidManifest.xml..."
            # Insert permission just after <manifest> tag
            sed -i "/<manifest/a \  $PERMISSION_LINE" "$MANIFEST_PATH"
            echo "Permission added."

            git config --global user.name "github-actions[bot]"
            git config --global user.email "github-actions[bot]@users.noreply.github.com"
            git add "$MANIFEST_PATH"
            git commit -m "fix: add AD_ID permission to AndroidManifest.xml"
            git push
          else
            echo "AD_ID permission already present. Nothing to do."
          fi
